pipeline {
  agent any 
  tools {
    maven 'Maven'
  }
  stages {
    stage ('Initialize') {
      steps {
        sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
            ''' 
      }
    }
    
    stage ('Check-Git-Secrets') {
      steps {
        sh 'rm trufflehog || true'
        sh 'docker run gesellix/trufflehog --json https://github.com/sophatchev/webapp.git > trufflehog'
        sh 'cat trufflehog' 
      }
    }

    stage ('Source Code Analysis') {
      steps {
        sh 'rm owasp* || true'
        sh 'wget "https://raw.githubusercontent.com/sophatchev/webapp/master/owasp-dependency-check2.sh" '
        sh 'chmod +x owasp-dependency-check2.sh'
        sh 'bash owasp-dependency-check2.sh'
        sh 'cat /var/lib/jenkins/OWASP-Dependency-Check2/reports/dependency-check-report.xml'
        
      }
    }
    
    stage ('Build') {
      steps {
      sh 'mvn clean package'
    }
    }
    
    stage ('Deploy-To-Tomcat') {
      steps {
      sshagent(['tomcat']) {
           sh 'scp -o StrictHostKeyChecking=no target/*war ubuntu@18.222.201.74:/prod/apache-tomcat-8.5.54/webapps/webapp.war'      }
      }
    }
  }
}
